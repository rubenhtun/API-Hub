<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Posts</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        color: #333;
      }
      .post {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .post h2 {
        margin: 0;
        color: #0073e6;
      }
      .post p {
        color: #555;
      }
    </style>
  </head>
  <body>
    <h1>Blog Posts</h1>

    <!-- Correctly loop through posts -->
    <% if (posts.length > 0) { %> <% posts.forEach(post => { %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content %><span> Id Number: <%= post.id %></span></p>
    </div>
    <% }); %> <% } else { %>
    <p>No posts available.</p>
    <% } %>
  </body>
</html>
